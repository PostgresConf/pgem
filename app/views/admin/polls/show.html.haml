.row
  .col-md-12
    .page-header
      %h1 Poll
- if @poll
  .row
    .col-md-8
      %dl.dl-horizontal
        %dt
          Comment:
        %dd:comment
          = @poll.comment
        %dt
          Active:
        %dd#questions
          = @poll.survey.active
        %dt
          Questions:
        %dd#questions
          = @poll.survey.questions.count
        %dt
          Attempts:
        %dd#attemps
          = @poll.survey.attempts.count


  .row
    .col-md-8.text-left
      - if can? :edit, @poll
        = link_to edit_admin_conference_poll_survey_path(@conference.short_title), class: 'btn btn-primary' do
          Questions
      - if can? :edit, @poll
        = link_to edit_admin_conference_poll_path(@conference.short_title), class: 'btn btn-primary' do
          Edit
      - if can? :destroy, @poll
        = link_to admin_conference_poll_path(@conference.short_title), method: 'delete', class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this poll?' } do
          Delete

- else
  .row
    .col-md-12.text-left
      = link_to 'Add Poll', admin_conference_poll_path(@conference.short_title),
      method: :post, class: 'btn btn-primary'
