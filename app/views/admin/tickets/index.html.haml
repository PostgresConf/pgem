.row
  .col-md-12
    .page-header
      %h1 Tickets
      %p.text-muted
        Tickets to get during registration
- if @conference.tickets.any?
  .row
    .col-md-12
      %table.table.table-hover.datatable#tickets
        %thead
          %th Position
          %th Title
          %th Price
          %th Early Bird
          %th Sold
          %th Turnover
          %th Actions
        %tbody
          - @conference.tickets.each do |ticket|
            %tr
              %td
                = ticket.position
                .btn-group-vertical{role: "group"}
                  = link_to(up_admin_conference_ticket_path(@conference.short_title, ticket.id), method: :patch, class: 'btn btn-default btn-xs') do
                    %i.fa.fa-chevron-up
                  = link_to(down_admin_conference_ticket_path(@conference.short_title, ticket.id), method: :patch, class: 'btn btn-default btn-xs') do
                    %i.fa.fa-chevron-down
              %td
                = link_to(admin_conference_ticket_path(@conference.short_title, ticket.id)) do
                  = ticket.title
              %td
                = humanized_money_with_symbol ticket.price
              %td
                = humanized_money_with_symbol ticket.early_bird_price
              %td
                = ticket.tickets_sold
              %td
                = humanized_money_with_symbol TicketPurchase.total_payments(@conference, ticket)
              %td
                .btn-group
                  = link_to 'Edit', edit_admin_conference_ticket_path(@conference.short_title, ticket.id),
                  method: :get, class: 'btn btn-primary'
                  = link_to 'Delete', admin_conference_ticket_path(@conference.short_title, ticket.id),
                  method: :delete, class: 'btn btn-danger',
                  data: { confirm: "Do you really want to delete the Ticket for #{ticket.title}? Attention: All ticket purchases will be also deleted!" }
.row
  .col-md-12
    = link_to 'Add Ticket', new_admin_conference_ticket_path, class: 'btn btn-success pull-right'

