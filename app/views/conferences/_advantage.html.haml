.container
  .row
    .col-md-12.text-center
      %h2
        = @conference.advantages.count.humanize.capitalize
        things that set this conference apart
      %p.lead
  .row.row-centered
    %div.slider.advantages
      - @conference.advantages.each do |advantage|
        .col-md-4.col-sm-4.col-centered.col-top
          .thumbnail
            - unless advantage.picture?
              %p.text-center
                %i.fa.fa-map-marker.fa-5x
            - else
              = image_tag advantage.picture.large.url, class: 'img-responsive img-activity'
            .caption
              %h3.text-center
              -if advantage.description.present?
                = markdown(advantage.description)

:javascript
  $('.advantages').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows: false,
    autoplay: true,
    autoplaySpeed: 2000,
    dots: true,
  });
