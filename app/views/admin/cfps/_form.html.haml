.row
  .col-md-12
    .page-header
      %h1 Call for Papers
.row
  .col-md-8
    = semantic_form_for(@cfp, url: admin_conference_program_cfp_path(@conference.short_title),html: {multipart: true}) do |f|
      = f.input :start_date, as: :string, input_html: { id: "registration-period-start-datepicker", start_date: @conference.start_date, end_date: @conference.end_date, readonly: "readonly"  }
      = f.input :end_date, as: :string, input_html: { id: "registration-period-end-datepicker", readonly: "readonly"  }
      = f.input :reg_reminder_end, as: :string, input_html: { id: "speaker-registration-deadline-datepicker", readonly: "readonly" }, hint: "If set, send registration reminders to unregistered conference speakers till this date"
      = f.input :notification_deadline, as: :string, input_html: { id: "cfp-notification-deadline-datepicker", readonly: "readonly" }, hint: "If set, this date will be shown on the Proposals page letting the user know when to expect proposal accept/reject notification "

      %p.text-right
        = f.action :submit, as: :button, button_html: { class: "btn btn-primary" }
