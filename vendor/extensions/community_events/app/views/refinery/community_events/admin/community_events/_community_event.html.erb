<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(community_event) -%>">
  <span class='title'>
    <%= community_event.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.community_events_community_event_path(community_event), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_community_events_admin_community_event_path(community_event), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.community_events_admin_community_event_path(community_event), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: community_event.title)}}  ) %>
  </span>
</li>
