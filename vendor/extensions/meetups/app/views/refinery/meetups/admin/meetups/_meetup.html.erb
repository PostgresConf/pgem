<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(meetup) -%>">
  <span class='title'>
    <%= meetup.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.meetups_meetup_path(meetup), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_meetups_admin_meetup_path(meetup), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.meetups_admin_meetup_path(meetup), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: meetup.title)}}  ) %>
  </span>
</li>
