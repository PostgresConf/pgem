.row
  .col-md-6
    .page-header
      %h1
        Attendees
      %p.text-muted
        People who are registered to attend this conference
  .col-md-6
    .btn-group.pull-right.export-buttons
      = link_to 'Export PDF', admin_conference_reports_attendees_path(@conference.short_title, @event, format: :pdf), class: 'btn btn-success'
      = link_to 'Export CSV', admin_conference_reports_attendees_path(@conference.short_title, @event, format: :csv), class: 'btn btn-success'
      = link_to 'Export XLS', admin_conference_reports_attendees_path(@conference.short_title, @event, format: :xlsx), class: 'btn btn-success'
.row
  .col-md-12
    %table.table.table-hover.datatable
      %thead
        %th #
        %th Last Name
        %th First Name
        %th Company
        %th Title
        %th E-Mail
        %th Type
      %tbody
        - @attendees.each_with_index do |attendee, index|
          %tr
            %td
              = index + 1
            %td
              = attendee.last_name
            %td
              = attendee.first_name
            %td
              = attendee.affiliation
            %td
              = attendee.title
            %td
              = attendee.email
            %td
              = attendee.type
