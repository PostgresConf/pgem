.row
  .col-md-12
    .page-header
      %h1
        - if @integration.new_record?
          New
        Integration
        = @integration.integration_type
.row
  .col-md-8
    = semantic_form_for(@integration, :url => (@integration.new_record? ? admin_conference_integrations_path : admin_conference_integration_path(@conference.short_title, @integration))) do |f|
      = f.input :integration_type, as: :select, collection: Integration.integration_types.keys 
      = f.input :key
      = f.input :url
      = f.input :integration_config_key
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
