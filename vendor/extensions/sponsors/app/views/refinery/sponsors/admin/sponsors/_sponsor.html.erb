<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(sponsor) -%>">
  <span class='title'>
    <%= sponsor.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.sponsors_sponsor_path(sponsor), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_sponsors_admin_sponsor_path(sponsor), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.sponsors_admin_sponsor_path(sponsor), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: sponsor.name)}}  ) %>
  </span>
</li>
