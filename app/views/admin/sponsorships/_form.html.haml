.row
  .col-md-12
    .page-header
      %h1
        -if @sponsorship.new_record?
          New
.row
  .col-md-8
    = semantic_form_for(@sponsorship, :url => (@sponsorship.new_record? ? admin_conference_sponsorships_path : admin_conference_sponsorship_path(@conference.short_title, @sponsorship))) do |f|
      = f.input :sponsor, collection: Sponsor.ordered
      = f.input :sponsorship_level, collection: @conference.sponsorship_levels
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
