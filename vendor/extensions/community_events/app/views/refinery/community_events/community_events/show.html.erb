<% content_for :body_content_title do %>
  <%= @community_event.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @community_event.title %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @community_event.body %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @community_event.url %>
    </p>
  </section>
  <section>
    <h1>Published At</h1>
    <p>
      <%=raw @community_event.published_at %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @community_event.author %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="community_events">
      <% @community_events.each do |community_event| %>
        <li>
          <%= link_to community_event.title, refinery.community_events_community_event_path(community_event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
