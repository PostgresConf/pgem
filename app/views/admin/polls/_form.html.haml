.row
  .col-md-8
    = semantic_form_for(@poll, :url => (@poll.new_record? ? admin_conference_poll_path : admin_conference_poll_path(@conference.short_title))) do |f|
      = f.input :comment, input_html: { rows: 5, data: { provide: 'markdown-editable' } }, hint: markdown_hint
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
