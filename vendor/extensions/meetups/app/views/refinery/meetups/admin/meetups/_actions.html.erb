<ul>
  <% if ::Refinery::Meetups::Admin::MeetupsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.meetups_admin_meetups_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_meetups_admin_meetup_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Meetups::Admin::MeetupsController.sortable? && ::Refinery::Meetups::Meetup.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.meetups_admin_meetups_path,
                     t('.reorder', what:  "Meetups"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.meetups_admin_meetups_path,
                      t('.reorder_done', what: "Meetups"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
