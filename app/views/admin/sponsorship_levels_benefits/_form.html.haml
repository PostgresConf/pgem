.row
  .col-md-8
    .page-header
      %h1
        = @sponsorship_levels_benefit.sponsorship_level.title
        = @sponsorship_levels_benefit.benefit.name
.row
  .col-md-6
    = semantic_form_for(@sponsorship_levels_benefit, :url => (@sponsorship_levels_benefit.new_record? ? admin_conference_sponsorship_levels_benefits_path : admin_conference_sponsorship_levels_benefit_path(@conference.short_title, @sponsorship_levels_benefit))) do |f|
      = f.input :code_type
      = f.input :max_uses
      = f.input :discount
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
